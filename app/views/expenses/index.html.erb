

<div class="row">
  <div class="four columns">


    <h1 style="font-size: 1.9em; color: #1cb531;">expenseLog</h1>


    <%= link_to 'Log New Expense', new_expense_path, class: "button" %>


  </div>
  <div class="eight columns">
<h5>Purchases made today</h5>
<table>
  <thead>
    <tr>
      
      <th>purchase</th>
      <th>$$$</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @current_daily_expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_type %></td>

        <td><span style="color:green">$</span> <%= expense.expense_cost %></td>
        <td><%= expense.purchaser_name %></td>



      </tr>
    <% end %>
  </tbody>
</table>
<h5><b>Stats</b></h5>
Total cost for today: <span style="color:green">$</span> <%= @daily_total %><br>
Total cost this week:<br>
Total cost this month:
<br>


<p>
  by <a href="#">@tristan_ag</a>
</p>
</div>
</div>
